@model CaseDiaryView.ViewModels.Section

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Sections">
    <div class="form-group">
        <label asp-for="SectionName" class="control-label"></label>
        <input asp-for="SectionName" class="form-control" />
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="SectionNumber" class="control-label"></label>
        <input asp-for="SectionNumber" class="form-control" />
        <span asp-validation-for="SectionNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
