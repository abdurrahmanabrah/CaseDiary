@model IEnumerable<CaseDiaryView.ViewModels.Adalot>
@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "Adalot";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Adalot</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Adalot Name</th>
                <th scope="col">Description</th>
                <th scope="col">Location</th>
                <th scope="col">Logo</th>
                <th scope="col">Banner</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AdalotName</td>
                    <td>@item.Description</td>
                    <td>@item.Location</td>
                    <td>
                        @if (item.Logo != null)
                        {
                            <img src="@Url.Content("https://localhost:7175/"+@item.Logo)" alt="@item.AdalotName" height="150" width="150" style="max-width: 100%;" />
                        }
                        else
                        {
                            <span>No Logo</span>
                        }
                    </td>
                    <td>
                        @if (item.Banner != null)
                        {
                            <img src="@Url.Content("https://localhost:7175/"+@item.Banner)" alt="@item.AdalotName" height="150" style="max-width: 100%;" />
                        }
                        else
                        {
                            <span>No Banner</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Adalots", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", "Adalots", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this item?')" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

