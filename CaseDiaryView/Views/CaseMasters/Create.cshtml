@model CaseDiaryView.ViewModels.CaseMaster
@{
    ViewBag.Title = "Create Case Information";
}

<div class="container mt-4">
    <h2 class="mb-4">Create Case Information</h2>

    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    @using (Html.BeginForm("Edit", "CaseMasters", FormMethod.Post, new { @class = "row g-3" }))
    {
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.AdalotId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.AdalotId, (IEnumerable<SelectListItem>)ViewBag.AdalotId, "Select Court", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AdalotId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.SectionId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.SectionId, (IEnumerable<SelectListItem>)ViewBag.SectionId, "Select Section", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SectionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.CaseNumber, new { @class = "form-label fw-bold" })
                @Html.EditorFor(m => m.CaseNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CaseNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.CaseDate, new { @class = "form-label fw-bold" })
                @Html.EditorFor(m => m.CaseDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(m => m.CaseDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12 d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary px-4">Save</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary px-4">Cancel</a>
        </div>
    }
</div>
