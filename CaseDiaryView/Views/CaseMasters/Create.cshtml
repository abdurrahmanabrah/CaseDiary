
@model CaseDiaryView.ViewModels.CaseMaster

@{
    ViewData["Title"] = "Create Case";
}

<h2>Create New Case</h2>



<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Case Number</label>
        <input asp-for="CaseNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Case Date</label>
        <input asp-for="CaseDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Badi</label>
        <select asp-for="BadiId" asp-items="ViewBag.BadiId" class="form-control" required>
            <option value="0">-- Select Badi --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Complainant</label>
        <select asp-for="ComplainantId" asp-items="ViewBag.ComplainantId" class="form-control" required>
            <option value="0">-- Select Complainant --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Case Source</label>
        <select asp-for="CaseSourceId" asp-items="ViewBag.CaseSourceId" class="form-control" required>
            <option value="0">-- Select Case Source --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Court</label>
        <select asp-for="CourtId" asp-items="ViewBag.CourtId" class="form-control" required>
            <option value="0">-- Select Court --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Adalot</label>
        <select asp-for="AdalotId" asp-items="ViewBag.AdalotId" class="form-control">
            <option value="0">-- Select Adalot --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Details</label>
        <textarea asp-for="Details" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option value="true">Active</option>
            <option value="false">Closed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>
 